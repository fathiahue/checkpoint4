{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    <div class="name">
        {{ form_label(form.name) }}
        {{ form_widget(form.name) }}
    </div>
    <div class="email">
        {{ form_label(form.email) }}
        {{ form_widget(form.email) }}
    </div>
    <div class="message">
        {{ form_label(form.message) }}
        {{ form_widget(form.message) }}
    </div>
        {{ form_rest(form) }}
        <button type="submit">Envoyer</button>
    {{ form_end(form) }}
{% endblock %}
